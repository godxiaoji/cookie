{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "noLib": false,
    "baseUrl": ".",
    "lib": ["esnext", "dom", "dom.iterable"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}
